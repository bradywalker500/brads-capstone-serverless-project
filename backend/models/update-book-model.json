{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "book",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "author": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "description": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "read": {
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "author",
        "description",
        "read"
    ],
    "additionalProperties": false
}