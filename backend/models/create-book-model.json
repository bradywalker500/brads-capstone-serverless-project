{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "book",
    "type": "object",
    "properties": {
        "bookName": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "author": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        },
        "description": {
            "type": "string",
            "pattern": "^(?!\\s*$).+"
        }
    },
    "required": [
        "book",
        "author",
        "description"
    ],
    "additionalProperties": false
}